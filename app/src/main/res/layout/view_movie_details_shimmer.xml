<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <View
            android:id="@+id/back_cover_shimmer"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:background="@drawable/shimmer_rectangle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/poster_shimmer"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shimmer_rectangle"
            app:layout_constraintStart_toStartOf="@id/back_cover_shimmer"
            app:layout_constraintTop_toBottomOf="@id/back_cover_shimmer" />

        <View
            android:id="@+id/title_shimmer"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shimmer_rectangle"
            app:layout_constraintStart_toEndOf="@id/poster_shimmer"
            app:layout_constraintTop_toTopOf="@id/poster_shimmer" />

        <View
            android:id="@+id/release_date_shimmer"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shimmer_rectangle"
            app:layout_constraintStart_toStartOf="@id/title_shimmer"
            app:layout_constraintTop_toBottomOf="@id/title_shimmer" />


        <View
            android:id="@+id/overview_label_shimmer"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shimmer_rectangle"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="@id/poster_shimmer"
            app:layout_constraintTop_toBottomOf="@id/poster_shimmer" />

        <View
            android:id="@+id/overview_shimmer"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shimmer_rectangle"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="@id/overview_label_shimmer"
            app:layout_constraintTop_toBottomOf="@id/overview_label_shimmer" />

        <View
            android:id="@+id/cast_label_shimmer"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shimmer_rectangle"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="@id/overview_shimmer"
            app:layout_constraintTop_toBottomOf="@id/overview_shimmer" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/cast_label_shimmer"
            app:layout_constraintTop_toBottomOf="@id/cast_label_shimmer"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shimmer_circle"
                />

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shimmer_circle"
                />

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shimmer_circle"
                />

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shimmer_circle"
                />

            <View
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/shimmer_circle"
                />


        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>